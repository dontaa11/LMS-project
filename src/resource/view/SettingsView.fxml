<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="main.java.com.yourorg.lms.ui.controller.SettingsController"
            stylesheets="@css/styles.css">
    
    <left>
        <fx:include source="components/Sidebar.fxml"/>
    </left>

    <center>
        <VBox spacing="30" styleClass="main-container" alignment="TOP_CENTER">
            <padding><Insets top="40" right="60" bottom="40" left="60"/></padding>

            <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="600">
                <Label text="Account Settings" styleClass="header-label" />
                <Label text="Update your personal information and security preferences." style="-fx-text-fill: #7f8c8d;" />
            </VBox>

            <VBox styleClass="card" maxWidth="600" spacing="20">
                <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>
                
                <Label text="Profile Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" prefWidth="150" halignment="RIGHT"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Full Name:" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Email Address:" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1" disable="true"/>

                    <Label text="Role:" GridPane.rowIndex="2" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <TextField fx:id="roleField" GridPane.rowIndex="2" GridPane.columnIndex="1" disable="true"/>
                </GridPane>

                <Separator />

                <Label text="Security" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" prefWidth="150" halignment="RIGHT"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Current Password:" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <PasswordField fx:id="currentPassField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="New Password:" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <PasswordField fx:id="newPassField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>

                <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10 0 0 0;">
                    <Button text="Cancel" styleClass="secondary-btn"/>
                    <Button text="Save Changes" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#handleSave"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>