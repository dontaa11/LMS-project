<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="main.java.com.yourorg.lms.ui.controller.StudentCoursesController"
            stylesheets="@css/styles.css">
    
    <left>
        <fx:include source="components/Sidebar.fxml"/>
    </left>

    <center>
        <VBox spacing="20" styleClass="main-container">
            <padding><Insets top="30" right="40" bottom="30" left="40"/></padding>

            <VBox spacing="5">
                <Label text="My Learning Path" styleClass="header-label" />
                <Label text="View your progress and enroll in new opportunities." style="-fx-text-fill: #7f8c8d;" />
            </VBox>

            <TabPane VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
                <tabs>
                    <Tab text="ðŸ“˜ Enrolled Courses">
                        <VBox spacing="15" style="-fx-padding: 20 0 0 0;">
                            <TableView fx:id="enrolledTable" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colCourseCode" text="Code" prefWidth="100"/>
                                    <TableColumn fx:id="colCourseName" text="Course Name" prefWidth="300"/>
                                    <TableColumn fx:id="colInstructor" text="Instructor" prefWidth="200"/>
                                    <TableColumn fx:id="colGrade" text="Current Grade" prefWidth="100"/>
                                </columns>
                                <placeholder>
                                    <Label text="You haven't enrolled in any courses yet."/>
                                </placeholder>
                            </TableView>
                        </VBox>
                    </Tab>
                    
                    <Tab text="ðŸ” Course Catalog">
                        <VBox spacing="15" style="-fx-padding: 20 0 0 0;">
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <TextField fx:id="searchField" promptText="Search for a topic..." prefWidth="300"/>
                                <Button text="Enroll Selected" styleClass="action-btn" />
                            </HBox>
                            <TableView fx:id="catalogTable" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colCatName" text="Course Name" prefWidth="300"/>
                                    <TableColumn fx:id="colCatDesc" text="Description" prefWidth="400"/>
                                    <TableColumn fx:id="colCatSeats" text="Seats Left" prefWidth="100"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </Tab>
                </tabs>
            </TabPane>
        </VBox>
    </center>
</BorderPane>