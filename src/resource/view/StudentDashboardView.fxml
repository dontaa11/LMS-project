<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="main.java.com.yourorg.lms.ui.controller.StudentDashboardController"
            stylesheets="@css/styles.css">

    <left>
        <fx:include source="components/Sidebar.fxml"/>
    </left>

    <center>
        <VBox spacing="20" styleClass="main-container">
            <padding>
                <Insets top="30" right="40" bottom="30" left="40"/>
            </padding>

            <HBox alignment="CENTER_LEFT">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label fx:id="welcomeLabel" text="Welcome, Student" styleClass="header-label" />
                    <Label text="LMS Student Portal | Dashboard" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" />
                </VBox>
                <Button text="Refresh Data" onAction="#initialize" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;"/>
            </HBox>

            <HBox spacing="20">
                <VBox styleClass="card" HBox.hgrow="ALWAYS" alignment="CENTER" prefHeight="100">
                    <Label text="Active Courses" style="-fx-text-fill: #7f8c8d;" />
                    <Label fx:id="courseCountLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                </VBox>
                <VBox styleClass="card" HBox.hgrow="ALWAYS" alignment="CENTER" prefHeight="100">
                    <Label text="Tasks Due" style="-fx-text-fill: #7f8c8d;" />
                    <Label text="3" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e67e22;" />
                </VBox>
            </HBox>

            <VBox spacing="10" VBox.vgrow="ALWAYS" styleClass="card" style="-fx-padding: 20;">
                <Label text="Your Enrolled Courses" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <TableView fx:id="courseTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="Course ID" prefWidth="150" />
                        <TableColumn fx:id="colTitle" text="Course Name" prefWidth="350" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </center>

</BorderPane>